generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  // url берётся из prisma.config.ts / env, как у тебя раньше
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?

  // блокировка аккаунта
  isBlocked     Boolean   @default(false)

  // кредиты и рефералка
  credits                   Int      @default(0)
  referralCode              String   @unique @default(cuid())
  referredBy                String?
  referralEarnings          Int      @default(0)
  totalPurchased            Int      @default(0)
  totalSpent                Int      @default(0)
  referralBonusGiven        Boolean  @default(false)
  referralBonusesThisMonth  Int      @default(0)
  referralBonusesResetAt    DateTime @default(now())

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  referrer  User?   @relation("UserReferrals", fields: [referredBy], references: [id])
  referrals User[]  @relation("UserReferrals")

  accounts       Account[]
  sessions       Session[]
  purchases      Purchase[]
  transactions   Transaction[]
  securityEvents SecurityEvent[]
  visits         VisitLog[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Purchase {
  id        String   @id @default(cuid())
  userId    String
  amount    Int
  credits   Int
  status    String   @default("pending")
  provider  String

  referralBonus Int     @default(0)
  referralPaid  Boolean @default(false)

  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}

model Transaction {
  id        String   @id @default(cuid())
  userId    String
  type      String
  amount    Int
  details   String?

  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  expires   DateTime
  createdAt DateTime @default(now())

  @@index([email])
}

// оплата CryptoCloud (у тебя уже логика есть)
model Payment {
  id        String   @id @default(cuid())
  orderId   String   @unique
  email     String
  planId    String
  status    String
  processed Boolean  @default(false)
  createdAt DateTime @default(now())
}

// Логи посещений
model VisitLog {
  id        String   @id @default(cuid())
  userId    String?
  path      String
  ip        String?
  country   String?
  userAgent String?
  referer   String?
  createdAt DateTime @default(now())

  user User? @relation(fields: [userId], references: [id])
}

// События безопасности
model SecurityEvent {
  id        String   @id @default(cuid())
  userId    String?
  type      String        // login_failed, blocked_login и т.п.
  ip        String?
  userAgent String?
  details   String?
  level     String   @default("info")  // info | warning | high
  createdAt DateTime @default(now())

  user User? @relation(fields: [userId], references: [id])
}
