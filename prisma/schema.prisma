generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?

  isBlocked Boolean @default(false)

  credits                  Int      @default(0)
  referralCode             String   @unique @default(cuid())
  referredBy               String?
  referralEarnings         Int      @default(0)
  totalPurchased           Int      @default(0)
  totalSpent               Int      @default(0)
  referralBonusGiven       Boolean  @default(false)
  referralBonusesThisMonth Int      @default(0)
  referralBonusesResetAt   DateTime @default(now())

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  referrer  User?  @relation("UserReferrals", fields: [referredBy], references: [id])
  referrals User[] @relation("UserReferrals")

  accounts       Account[]
  sessions       Session[]
  purchases      Purchase[]
  transactions   Transaction[]
  payments       Payment[]
  securityEvents SecurityEvent[]
  visits         VisitLog[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Purchase {
  id       String @id @default(cuid())
  userId   String
  amount   Int
  credits  Int
  status   String @default("pending")
  provider String

  referralBonus Int     @default(0)
  referralPaid  Boolean @default(false)

  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}

model Transaction {
  id      String @id @default(cuid())
  userId  String
  type    String
  amount  Int
  details String?

  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  expires   DateTime
  createdAt DateTime @default(now())

  @@index([email])
}

model Payment {
  id        String    @id @default(cuid())
  userId    String?
  email     String
  orderId   String    @unique
  txHash    String?   @unique
  currency  String
  planId    String
  amount    String
  credits   Int
  status    String    @default("pending")
  processed Boolean   @default(false)
  comment   String?
  expiresAt DateTime?
  createdAt DateTime  @default(now())

  user User? @relation(fields: [userId], references: [id])

  @@index([createdAt])
  @@index([status])
  @@index([comment])
}

model VisitLog {
  id        String   @id @default(cuid())
  userId    String?
  path      String
  ip        String?
  country   String?
  userAgent String?
  referer   String?
  createdAt DateTime @default(now())

  user User? @relation(fields: [userId], references: [id])

  @@index([createdAt])
  @@index([path])
}

model SecurityEvent {
  id        String   @id @default(cuid())
  userId    String?
  type      String
  ip        String?
  userAgent String?
  details   String?
  level     String   @default("info")
  createdAt DateTime @default(now())

  user User? @relation(fields: [userId], references: [id])

  @@index([createdAt])
  @@index([type])
  @@index([level])
}